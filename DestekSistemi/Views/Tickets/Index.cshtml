@model IEnumerable<DestekSistemi.Models.Ticket>

@{
    ViewData["Title"] = "Destek Talepleri";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>🎫 Destek Talepleri</h1>
    <a asp-action="Create" class="btn btn-primary">+ Yeni Talep Oluştur</a>
</div>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Konu Başlığı</th>
            <th>Açıklama</th>
            <th>Durum</th>
            <th>Oluşturulma Tarihi</th>
            <th>Talep Sahibi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold">@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    @if (item.Status == "Çözüldü")
                    {
                        <span class="badge bg-success">Çözüldü</span>
                    }
                    else if (item.Status == "İnceleniyor")
                    {
                        <span class="badge bg-info text-dark">İnceleniyor</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">@item.Status</span>
                    }
                </td>
                <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    @if (item.User != null)
                    {
                        @Html.DisplayFor(modelItem => item.User.FullName)
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Durum Güncelle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>